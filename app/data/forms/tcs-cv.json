          "required": true
        },
        {
          "id": "nationalInsuranceNumber",
          "type": "text",
          "label": "National Insurance Number",
          "required": true
        },
        {
          "id": "sex",
          "type": "multipleChoice",
          "label": "Sex",
          "required": true,
          "options": [
            {
              "value": "Male",
              "label": "Male"
            },
            {
              "value": "Female",
              "label": "Female"
            },
            {
              "value": "N/A",
              "label": "N/A"
            }
          ]
        },
        {
          "id": "address",
          "type": "address",
          "label": "Address",
