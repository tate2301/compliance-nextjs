    {
      "id": "personalInformation",
      "type": "section",
      "label": "Personal Information",
      "fields": [
        {
          "id": "fullName",
          "type": "name",
          "label": "Name",
          "required": true,
          "fields": [
            {
              "id": "firstName",
              "type": "text",
              "label": "First Name"
            },
            {
              "id": "lastName",
              "type": "text",
              "label": "Last Name"
            }
          ]
        },
        {
          "id": "dateOfBirth",
          "type": "date",
          "label": "Date of Birth",
          "required": true
        },
        {
          "id": "email",
          "type": "email",
          "label": "Email",
          "required": true
        },
        {
          "type": "paragraph",
          "label": "Instructions",
          "text": "Please fill out all required fields marked with an asterisk (*)",
          "properties": {
            "text": "Please fill out all required fields marked with an asterisk (*)",
            "fontSize": 18,
            "fontWeight": "medium",
            "textAlign": "left",
            "textColor": "#374151"
          }
        },
        {
          "id": "phoneNumber",
          "type": "phone",
