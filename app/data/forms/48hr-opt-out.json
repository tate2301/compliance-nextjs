{
  "id": "48hr-opt-out",
  "title": "48hr Opt Out",
  "version": "1.0",
  "fields": [
    {
      "id": "optOutChoice",
      "type": "multipleChoice",
      "label": "Working Time Regulations Opt‑Out",
      "required": true,
      "options": [
        {
          "value": "optOut",
          "label": "I wish to opt‑out of the 48‑hour working week restriction under the Working Time Regulations 1998"
        },
        {
          "value": "noOptOut",
          "label": "I do not wish to opt‑out of the 48‑hour working week restriction under the Working Time Regulations 1998"
        }
      ]
    },
    {
      "id": "name",
      "type": "name",
      "label": "Name",
      "required": true,
      "fields": [
        { "id": "firstName", "type": "text", "label": "First Name" },
        { "id": "lastName",  "type": "text", "label": "Last Name"  }
      ]
    },
    {
      "id": "email",
      "type": "email",
      "label": "E‑mail",
      "required": true
    },
    {
      "id": "address",
      "type": "address",
      "label": "Address",
      "required": true,
      "fields": [
        { "id": "streetAddress1", "type": "text", "label": "Street Address"        },
        { "id": "streetAddress2", "type": "text", "label": "Street Address Line 2" },
        { "id": "city",           "type": "text", "label": "City"                  },
        { "id": "stateProvince",  "type": "text", "label": "State / Province"      },
        { "id": "postalCode",     "type": "text", "label": "Postal / Zip Code"     }
      ]
    },
    {
      "id": "phoneNumber",
      "type": "phone",
      "label": "Phone Number",
      "required": true
    },
    {
    "id": "staffSignature",
      "type": "signature",
      "label": "Staff Member Signature",
      "required": true
    },
    {
      "id": "date",
      "type": "date",
      "label": "Date",
      "required": true
    }
  ]
}